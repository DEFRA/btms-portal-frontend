{
  "name": "btms-portal-frontend",
  "version": "0.0.0",
  "description": "BTMS Frontend",
  "sideEffects": false,
  "main": ".server/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "run-s build:frontend",
    "build:frontend": "NODE_ENV=production webpack",
    "dev": "run-p frontend:watch server:watch",
    "dev:debug": "run-p frontend:watch server:debug",
    "frontend:watch": "NODE_ENV=development webpack --watch",
    "git:pre-commit-hook": "npm run test:lint && npm test",
    "postinstall": "npm run setup:husky && npm run build",
    "lint": "run-s test:lint lint:scss",
    "lint:fix": "standard . --fix",
    "lint:scss": "stylelint \"src/**/*.scss\" --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .gitignore",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:lint": "standard",
    "server:watch": "node --inspect=0.0.0.0 --watch --watch-path=src/templates --env-file-if-exists=.env.local src/index.js",
    "server:debug": "node --inspect-brk=0.0.0.0 --watch --env-file-if-exists=.env.local src/index.js",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node --use-strict .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@defra/hapi-tracing": "^1.0.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@hapi/bell": "^13.0.2",
    "@hapi/catbox-memory": "^6.0.2",
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "^3.2.0",
    "@hapi/vision": "^7.0.3",
    "@hapi/yar": "^11.0.2",
    "aws-embedded-metrics": "^4.2.0",
    "convict": "^6.2.4",
    "cssnano": "^7.0.6",
    "cssnano-preset-default": "^7.0.6",
    "date-fns": "^4.1.0",
    "govuk-frontend": "5.9.0",
    "hapi-pino": "^12.1.0",
    "hapi-pulse": "^3.0.1",
    "https-proxy-agent": "^7.0.5",
    "ioredis": "^5.4.1",
    "joi": "^17.4.2",
    "nunjucks": "^3.2.4",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "29.5.14",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "babel-plugin-module-resolver": "5.0.2",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "cheerio": "^1.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "global-jsdom": "26.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "3.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-load-config": "^6.0.1",
    "postcss-loader": "^8.1.1",
    "sass-embedded": "^1.80.6",
    "sass-loader": "^16.0.3",
    "source-map-loader": "^5.0.0",
    "standard": "^17.1.2",
    "stylelint": "^16.10.0",
    "stylelint-config-gds": "^2.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.96.1",
    "webpack-assets-manifest": "^5.2.1",
    "webpack-cli": "^5.1.4"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  }
}
