{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{{
  govukSummaryList({
    classes: "app-customs-declaration-summary",
    rows: [
      {
        key: { text: "CHED Reference" },
        value: { text: preNotification.referenceNumber }
      },
      {
        key: { text: "CHED Status" },
        value: { text: preNotification.status }
      },
      {
        key: { text: "Last updated" },
        value: { text: preNotification.updated }
      },
      {
        key: { text: "Authorities" },
        value: { text: preNotification.authorities | join(", ") }
      }
    ]
  })
}}
