{% extends 'layout.njk' %}

{% set pageTitle = 'Border Trade Matching Service' %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ pageTitle }}</h1>
  <p class="govuk-body govuk-!-font-size-27">
    Check inspection outcomes for sanitary and phytosanitary (SPS) goods and find
    mismatches between customs declarations and IPAFFS pre-notifications.
  </p>
  <p class="btms-start-link">
    <a class="govuk-button govuk-button--inverse govuk-button--start" href={{ signInUrl }}>
      Sign in
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
      </svg>
    </a>
  </p>
{% endblock %}
