{% macro cdsErrorEvent(timelineEvent) %}

  {% for error in timelineEvent.errors %}
    <div class="moj-timeline__description">
      <div class="timeline-detail-row">
        <span class="timeline-detail-label">Error</span>
        <span>{{ error.errorCode }}</span>
      </div>
      <div class="timeline-detail-row">
        <span class="timeline-detail-label">Message</span>
        <span class="timeline-message">{{ error.errorMessage }}</span>
      </div>
      <div class="timeline-detail-row">
        <span class="timeline-detail-label">Created</span>
        <time datetime="{{ error.created }}">{{ error.created }}</time>
      </div>
    </div>
  {% endfor %}

{% endmacro %}
