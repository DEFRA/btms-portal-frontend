{% macro gmrSearchResultMrn(customsDeclaration) %}
  {% set unknownMrnTooltipText = 'This MRN cannot be found in BTMS. The MRN may not have SPS goods associated with it or HMRC have not sent details of this MRN to BTMS.' %}

  {% if customsDeclaration.isKnownMrn %}
    <a href="{{customsDeclaration.knownMrnLink}}">{{customsDeclaration.mrn}}</a>
  {% else %}
    <div class="tooltiplink mrn--unknown" aria-describedby="{{customsDeclaration.mrn}}">{{customsDeclaration.mrn}}<div class="mrn__tooltip" role="tooltip" id="{{customsDeclaration.mrn}}">{{unknownMrnTooltipText}}</div></div>
  {% endif %}
{% endmacro %}
