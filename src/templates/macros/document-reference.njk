{% macro documentReference(decision) %}
  {% if decision.documentReference and decision.decisionReason %}
    {% set id = 'tooltip-' + decision.id %}
    <td class="govuk-table__cell btms-no-match" tabindex="0" aria-describedby="{{ id }}">
      {{ decision.documentReference }}
      <span role="tooltip" id="{{ id }}">
        {{ decision.decisionReason }}
      </span>
    </td>
  {% else %}
    <td class="govuk-table__cell">{{ decision.documentReference }}</td>
  {% endif %}
{% endmacro %}
